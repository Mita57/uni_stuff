<h3>Изменить оборудование</h3>
@using (Html.BeginForm("Equipment", "Edit", FormMethod.Post, new { @class = "mt-3" }))
{
    <div class="form-group row">
        Имя
        <div>
            <input readonly type="text" name="id" id="id" value="@ViewBag.name">
        </div>
    </div>

    <div class="form-group row">
        Новое имя
        <div>
            <input type="text" name="newName" id="newName" value="@ViewBag.name">
        </div>
    </div>

    <div class="form-group row">
        Цена
        <div>
            <input type="number" name="price" id="price" value=@ViewBag.price>
        </div>
    </div>


    <div class="form-group row">
        <input type="submit" value="Изменить">
        @Html.ActionLink("Отмена", "Equipment", "Home")
    </div>
}
